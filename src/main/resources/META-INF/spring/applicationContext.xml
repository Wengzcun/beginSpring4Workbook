<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="controller" class="com.sample.spring.bankapp.controller.FixedDepositControllerImpl">
		<property name="fixedDepositService" ref="service" />
	</bean>
	<bean id="service" class="com.sample.spring.bankapp.service.FixedDepositServiceImpl">
		<property name="fixedDepositDao" ref="dao" />
	</bean>
	<!--  Static Factory Method -->
	<!--  
	<bean id="dao" class="com.sample.spring.bankapp.dao.FixedDepositDaoFactory" factory-method="getFixedDepositDao" >
		<constructor-arg index="0" value="jdbc" />
	</bean>
	-->
	<!-- Instance Factory Method -->
	<bean id="daoFactory" class="com.sample.spring.bankapp.dao.FixedDepositDaoFactory" />
	<bean id="dao" factory-bean="daoFactory" factory-method="getFixedDepositDao">
		<constructor-arg index="0" value="jdbc" />
		<property name="databaseInfo" ref="databaseInfo" />
	</bean>
	<bean id="databaseInfo" class="com.sample.spring.bankapp.dao.DatabaseInfo" />
	<!-- Different beans of same class. -->
	<bean id="oneDao" class="com.sample.spring.bankapp.dao.FixedDepositDaoImpl" />
	<bean id="anotherDao" class="com.sample.spring.bankapp.dao.FixedDepositDaoImpl" />
	<!-- Prototype bean -->
	<bean id="details" class="com.sample.spring.bankapp.domain.FixedDepositDetails" scope="prototype" />
</beans>