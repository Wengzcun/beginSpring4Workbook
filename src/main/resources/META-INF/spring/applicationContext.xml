<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="fixedDepositController" class="com.sample.spring.bankapp.controller.FixedDepositControllerImpl">
		<property name="fixedDepositService" ref="fixedDepositService" />
	</bean>
	<bean id="fixedDepositService" class="com.sample.spring.bankapp.service.FixedDepositServiceImpl">
		<property name="fixedDepositDao" ref="fixedDepositDao" />
	</bean>
	<!--  Static Factory Method -->
	<!--  
	<bean id="dao" class="com.sample.spring.bankapp.dao.FixedDepositDaoFactory" factory-method="getFixedDepositDao" >
		<constructor-arg index="0" value="jdbc" />
	</bean>
	-->
	<!-- Instance Factory Method -->
	<bean id="fixedDepositDaoFactory" class="com.sample.spring.bankapp.dao.FixedDepositDaoFactory" />
	<bean id="fixedDepositDao" factory-bean="fixedDepositDaoFactory" factory-method="getFixedDepositDao">
		<constructor-arg index="0" value="jdbc" />
		<property name="databaseInfo" ref="databaseInfo" />
	</bean>	
	<bean id="databaseInfo" class="com.sample.spring.bankapp.utils.DatabaseInfo" />
	
	<!-- Different beans of same class. -->
	<bean id="oneDao" parent="daoTemplate" class="com.sample.spring.bankapp.dao.FixedDepositDaoImpl" />
	<bean id="anotherDao" parent="daoTemplate" class="com.sample.spring.bankapp.dao.FixedDepositDaoImpl" />
	<!-- Prototype bean -->
	<bean id="details" class="com.sample.spring.bankapp.domain.FixedDepositDetails" scope="prototype" />
	
	<!-- Parent bean (abstract) -->
	<bean id="databaseOperations" class="com.sample.spring.bankapp.utils.DatabaseOperations" />
	<bean id="daoTemplate" abstract="true">
		<property name="databaseOperations" ref="databaseOperations" />
	</bean>
	
	<bean id="personalBankingController" class="com.sample.spring.bankapp.controller.PersonalBankingControllerImpl">
		<property name="personalBankingService" ref="personalBankingService" />
	</bean>
	<bean id="personalBankingService" class="com.sample.spring.bankapp.service.PersonalBankingServiceImpl">
		<property name="personalBankingDao" ref="personalBankingDao" />
	</bean>
	<bean id="personalBankingDao" parent="daoTemplate" class="com.sample.spring.bankapp.dao.PersonalBankingDaoImpl">
	</bean>
	
</beans>